ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../bin/Debug-linux-x86_64
  TARGET = $(TARGETDIR)/Compiler
  OBJDIR = ../bin-int/Debug-linux-x86_64/Compiler
  DEFINES += -DF515_PLATFORM_LINUX -DF515_DEBUG
  INCLUDES += -I../StandardFileIO/src -I../StandardLogger/src
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++2a
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../bin/Debug-linux-x86_64/libStandardFileIO.so ../bin/Debug-linux-x86_64/libStandardLogger.so
  LDDEPS += ../bin/Debug-linux-x86_64/libStandardFileIO.so ../bin/Debug-linux-x86_64/libStandardLogger.so
  ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -Wl,-rpath,'$$ORIGIN' -m64
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: prebuild prelink $(TARGET)
	@:

endif

ifeq ($(config),release)
  RESCOMP = windres
  TARGETDIR = ../bin/Release-linux-x86_64
  TARGET = $(TARGETDIR)/Compiler
  OBJDIR = ../bin-int/Release-linux-x86_64/Compiler
  DEFINES += -DF515_PLATFORM_LINUX -DF515_RELEASE
  INCLUDES += -I../StandardFileIO/src -I../StandardLogger/src
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -std=c++2a
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../bin/Release-linux-x86_64/libStandardFileIO.so ../bin/Release-linux-x86_64/libStandardLogger.so
  LDDEPS += ../bin/Release-linux-x86_64/libStandardFileIO.so ../bin/Release-linux-x86_64/libStandardLogger.so
  ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -Wl,-rpath,'$$ORIGIN' -m64 -s
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
